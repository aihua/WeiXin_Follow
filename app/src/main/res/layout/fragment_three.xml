<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E9E9E9"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_pyq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageview_pyq"
            android:text="朋友圈"
            android:textColor="#333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_sys"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rela_friend"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_item"
        >

        <ImageView
            android:id="@+id/imageview_sys"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageview_sys"
            android:text="扫一扫"
            android:textColor="#333333"
            android:textSize="16sp"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/view_sys"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rela_sys"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#CCCCCC"></View>

    <RelativeLayout
        android:id="@+id/rela_yay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view_sys"
        android:background="@drawable/selector_item"
        >

        <ImageView
            android:id="@+id/imageview_yay"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageview_yay"
            android:text="摇一摇"
            android:textColor="#333333"
            android:textSize="16sp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_fjr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rela_yay"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_item"
        >

        <ImageView
            android:id="@+id/imageview_fjr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageview_fjr"
            android:text="附近的人"
            android:textColor="#333333"
            android:textSize="16sp"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/view_fjr"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rela_fjr"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#CCCCCC"></View>

    <RelativeLayout
        android:id="@+id/rela_plp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view_fjr"
        android:background="@drawable/selector_item"
        >

        <ImageView
            android:id="@+id/imageview_plp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageview_plp"
            android:text="漂流瓶"
            android:textColor="#333333"
            android:textSize="16sp"></TextView>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rela_gw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rela_plp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_item"
        >

        <ImageView
            android:id="@+id/imageview_gw"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageview_gw"
            android:text="购物"
            android:textColor="#333333"
            android:textSize="16sp"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/view_gw"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rela_gw"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#CCCCCC"></View>

    <RelativeLayout
        android:id="@+id/rela_yx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view_gw"
        android:background="@drawable/selector_item"
        >

        <ImageView
            android:id="@+id/imageview_yx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageview_yx"
            android:text="游戏"
            android:textColor="#333333"
            android:textSize="16sp"></TextView>
    </RelativeLayout>


</RelativeLayout>